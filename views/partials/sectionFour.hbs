<section class="secFour">
    <div class="container">
        <div class="row centered align-items-center">
            <div class="col-lg-12">
                <div class="owl-carousel">
                  <div><img src="http://beonepage.shlk.org.ua/wp-content/uploads/2020/03/php_PNG12-300x189.png"/></div>
                  <div><img src="http://beonepage.shlk.org.ua/wp-content/uploads/2020/04/HTML5-CSS3.jpg"/></div>
                  <div><img src="http://beonepage.shlk.org.ua/wp-content/uploads/2020/03/03a203deee86e43d13f4a61ec66459b2.png"/></div>
                  <div><img src="http://beonepage.shlk.org.ua/wp-content/uploads/2020/03/javascript-logo.png"/></div>
                  <div><img src="http://beonepage.shlk.org.ua/wp-content/uploads/2020/03/nodejs-e1585683573661.png"/></div>
                  <div><img src="http://beonepage.shlk.org.ua/wp-content/uploads/2020/03/python-logo-e1585683022728.png"/></div>
                </div>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    {{#each tabs}}

                        <li class="nav-item">
                            {{#if @index }}
                                <a class="nav-link " id="{{this.code}}-tab" data-toggle="tab" href="#{{this.code}}" role="tab"
                                   aria-controls="{{this.code}}" aria-selected="true">{{this.title}}</a>
                            {{else}}
                                <a class="nav-link active" id="{{this.code}}-tab" data-toggle="tab" href="#{{this.code}}" role="tab"
                                   aria-controls="{{this.code}}" aria-selected="true">{{this.title}}</a>
                            {{/if}}
                        </li>

                    {{/each}}

                </ul>
                <div class="tab-content" id="myTabContent">
                {{#each tabs}}

                    {{#if @index }}
                        <div class="tab-pane fade show " id="{{this.code}}" role="tabpanel" aria-labelledby="{{this.code}}-tab">{{this.text}}
                        </div>
                    {{else}}
                        <div class="tab-pane fade show active" id="{{this.code}}" role="tabpanel" aria-labelledby="{{this.code}}-tab">{{this.text}}
                        </div>
                    {{/if}}

                {{/each}}


                </div>
            </div>
        </div>
    </div>
</section>